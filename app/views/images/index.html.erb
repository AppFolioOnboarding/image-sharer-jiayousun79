<h1>Image List</h1>
<br>
<%= link_to 'Homepage', images_path %>
<br>
<br>
<table>
  <% @images.each do |image| %>
    <tr>
      <% if image.url %>
        <td>
          <%= image_tag(image.url, :size => "400x400") %>
          <ul>
            <% image.tag_list.each do |tag| %>
                <li><%= link_to tag, images_path(tag: tag) %></li>
            <% end %>
          </ul>
          <%= link_to 'Delete this image', image_path(image), method: :delete, data: { confirm: 'Are you sure?' } %>
          <br>
          <br>
        </td>
      <% end %>
    </tr>
  <% end %>
</table>
